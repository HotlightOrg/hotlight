{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "declaration": true,
    "declarationDir": "dist/",
    "emitDeclarationOnly": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false
  },
  "include": ["src"],
  "exclude": ["src/**/*.spec.ts"]
}
