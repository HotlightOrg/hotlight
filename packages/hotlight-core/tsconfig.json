{
  "compilerOptions": {
    "target": "esnext",
    "module": "es6",
    "lib": ["esnext", "dom"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["src/**/*.spec.ts"]
}
